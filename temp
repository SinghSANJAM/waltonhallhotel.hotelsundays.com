  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({ duration: 1000, once: true });

    // Floating Petals Animation
    function createPetal() {
      const petal = document.createElement('span');
      petal.className = 'petal';
      petal.textContent = '*';
      petal.style.left = Math.random() * 100 + 'vw';
      petal.style.fontSize = (Math.random() * 1.2 + 1.2) + 'rem';
      petal.style.animationDuration = (Math.random() * 5 + 8) + 's';
      petal.style.top = '-100px';
      document.getElementById('floating-petals').appendChild(petal);
      setTimeout(() => petal.remove(), 20000);
    }
    setInterval(createPetal, 15000);

    // Lightbox Functionality
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img');
    const lightboxClose = document.getElementById('lightbox-close');
    document.querySelectorAll('.custom-gallery-layout img, .church-gallery img, .craft-image img, .event-card img').forEach(img => {
      img.addEventListener('click', () => {
        lightbox.style.display = 'flex';
        lightbox.classList.add('active');
        lightboxImg.src = img.src;
        lightboxImg.alt = img.alt;
      });
    });
    lightboxClose.onclick = () => {
      lightbox.classList.remove('active');
      lightbox.style.display = 'none';
    };
    lightbox.onclick = e => {
      if (e.target === lightbox) {
        lightbox.classList.remove('active');
        lightbox.style.display = 'none';
      }
    };

    // Testimonial Carousel
    const slides = document.querySelectorAll('.testimonial-slide');
    const dotsContainer = document.getElementById('testimonial-dots');
    let currentSlide = 0;
    function showSlide(idx) {
      slides.forEach((slide, i) => slide.classList.toggle('active', i === idx));
      dotsContainer.querySelectorAll('.carousel-dot').forEach((dot, i) => dot.classList.toggle('active', i === idx));
    }
    slides.forEach((_, i) => {
      const dot = document.createElement('span');
      dot.className = 'carousel-dot' + (i === 0 ? ' active' : '');
      dot.onclick = () => { currentSlide = i; showSlide(i); }
      dotsContainer.appendChild(dot);
    });
    setInterval(() => {
      currentSlide = (currentSlide + 1) % slides.length;
      showSlide(currentSlide);
    }, 5000);
  </script>
</body>
</html>