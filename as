  <script>
    window.addEventListener('DOMContentLoaded', () => {
      // Newsletter Popup
      const params = new URLSearchParams(window.location.search);
      if (params.get('subscribed') === 'true') {
        const popup = document.getElementById('newsletter-popup');
        if (popup) {
          popup.style.display = 'block';
          setTimeout(() => popup.style.display = 'none', 5000);
        }
      }

      // Mobile Menu Toggle
      const mobileToggle = document.querySelector('.mobile-menu-toggle');
      const nav = document.querySelector('.main-navigation');
      mobileToggle.addEventListener('click', () => {
        nav.classList.toggle('active');
        mobileToggle.classList.toggle('active');
        const spans = mobileToggle.querySelectorAll('span');
        if (mobileToggle.classList.contains('active')) {
          spans[0].style.transform = 'rotate(45deg) translate(5px, 5px)';
          spans[1].style.opacity = '0';
          spans[2].style.transform = 'rotate(-45deg) translate(7px, -7px)';
        } else {
          spans[0].style.transform = 'none';
          spans[1].style.opacity = '1';
          spans[2].style.transform = 'none';
        }
      });

      // Carousel
      const carouselContainer = document.querySelector('.whhs_carousel-container');
      const carouselSlides = document.querySelectorAll('.whhs_carousel-slide');
      const indicatorsContainer = document.querySelector('.whhs_carousel-indicators');
      let currentIndex = 0;
      const totalSlides = carouselSlides.length;

      for (let i = 0; i < totalSlides; i++) {
        const indicator = document.createElement('div');
        indicator.classList.add('whhs_indicator');
        if (i === 0) indicator.classList.add('whhs_active');
        indicator.addEventListener('click', () => {
          currentIndex = i;
          updateCarousel();
        });
        indicator.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            currentIndex = i;
            updateCarousel();
          }
        });
        indicatorsContainer.appendChild(indicator);
      }

      function updateCarousel() {
        carouselContainer.style.transform = `translateX(-${currentIndex * 100}%)`;
        document.querySelectorAll('.whhs_indicator').forEach((indicator, i) => {
          indicator.classList.toggle('whhs_active', i === currentIndex);
        });
      }

      document.querySelector('.whhs_prev').addEventListener('click', () => {
        currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
        updateCarousel();
      });

      document.querySelector('.whhs_next').addEventListener('click', () => {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      });

      setInterval(() => {
        currentIndex = (currentIndex + 1) % totalSlides;
        updateCarousel();
      }, 5000);

      carouselSlides.forEach(slide => {
        const img = slide.querySelector('img');
        img.onerror = () => {
          console.error('Failed to load image:', img.src);
          img.src = 'images/rooms/fallback.jpg';
        };
      });

      // Filter
      const filterButtons = document.querySelectorAll('.whhs_filter-btn');
      const meetingRooms = document.querySelectorAll('.whhs_meeting-room');

      filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          filterButtons.forEach(btn => btn.classList.remove('whhs_active'));
          button.classList.add('whhs_active');
          const filter = button.getAttribute('data-filter');
          meetingRooms.forEach(room => {
            const categories = room.getAttribute('data-category').split(' ');
            room.style.display = filter === 'all' || categories.includes(filter) ? 'block' : 'none';
          });
        });

        button.addEventListener('keydown', (e) => {
          if (e.key === 'Enter' || e.key === ' ') {
            e.preventDefault();
            button.click();
          }
        });
      });

      // Modal
      const modal = document.getElementById('contactModal');
      const modalButtons = document.querySelectorAll('.whhs_btn-contact, .whhs_btn-inquire, .whhs_btn-package');
      modalButtons.forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.preventDefault();
          modal.classList.add('show');
          modal.querySelector('input[name="name"]').focus();
        });
      });

      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          modal.classList.remove('show');
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('show')) {
          modal.classList.remove('show');
        }
      });
    });
  </script>
</body>
</html>
